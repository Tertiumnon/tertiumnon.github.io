{
  "name": "tertiumnon-github-io",
  "version": "1.48.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:articles": "bun ./src/utils/create-article-list.ts",
    "build:gh": "ng build --output-path docs --base-href /",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --browsers ChromeHeadless --watch=false",
    "lint:fix": "bunx rome format --write src && bunx rome check src --apply",
    "save:build:content": "git add --all && git commit -m 'save builded content'",
    "release": "bun node_modules/@tertium/js/scripts/release.js",
    "release:hotfix": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- hotfix",
    "release:minor": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- minor",
    "release:major": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- major"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@tertium/js": "^0.15.1",
    "rxjs": "~6.6.0",
    "marked": "^5.1.0",
    "highlight.js": "^11.8.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.2.0",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2003.3",
    "@angular-devkit/core": "^20.3.3",
    "@angular-devkit/schematics": "^20.3.3",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^18.17.15",
    "autoprefixer": "^10.4.15",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "less": "^4.2.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
