{
  "name": "tertiumnon-github-io",
  "version": "1.47.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:articles": "bun ./src/utils/create-article-list.ts",
    "build:gh": "ng build --output-path docs --base-href /",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --browsers ChromeHeadless --watch=false",
    "lint:fix": "biome check --write ./src",
    "save:build:content": "git add --all && git commit -m 'save builded content'",
    "release": "bun node_modules/@tertium/js/scripts/release.js",
    "release:hotfix": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- hotfix",
    "release:minor": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- minor",
    "release:major": "bun run build:articles && npm run build:gh && bun run save:build:content && npm run release -- major"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "@angular/router": "^19.2.15",
    "@tertium/js": "^0.15.1",
    "rxjs": "~6.6.0",
    "showdown": "^2.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.2.0",
    "update": "^0.7.4",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1902.17",
    "@angular-devkit/build-angular": "^19.2.17",
    "@angular-devkit/core": "^19.2.17",
    "@angular-devkit/schematics": "^19.2.17",
    "@angular/cli": "^19.2.17",
    "@angular/compiler-cli": "^19.2.15",
    "@biomejs/biome": "1.9.4",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^18.17.15",
    "@types/showdown": "^2.0.6",
    "autoprefixer": "^10.4.15",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher"
  ]
}
